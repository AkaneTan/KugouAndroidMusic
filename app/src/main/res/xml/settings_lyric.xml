<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.ghhccghk.musicplay.ui.preference.CustomSingleSelectPreference
        android:defaultValue="Regular"
        android:layout="@layout/preference_switch"
        android:entries="@array/font_weight_entries"
        android:entryValues="@array/font_weight_values"
        android:key="lyric_font_weight"
        android:summary="@string/settings_lyric_font_weight_summary"
        android:title="@string/settings_lyric_font_weight"
        app:iconSpaceReserved="false" />


    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="lyric_line_balance"
        android:layout="@layout/preference_switch"
        android:summary="@string/settings_lyric_line_balance_summary"
        android:title="@string/settings_lyric_line_balance"
        android:widgetLayout="@layout/preference_switch_widget"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="setting_blur"
        android:layout="@layout/preference_switch"
        android:summary="@string/setting_blur_summary"
        android:title="@string/setting_blur"
        android:widgetLayout="@layout/preference_switch_widget"
        app:iconSpaceReserved="false" />


    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="setting_translation"
        android:layout="@layout/preference_switch"
        android:summary="@string/setting_translation_summary"
        android:title="@string/setting_translation"
        android:widgetLayout="@layout/preference_switch_widget"
        app:iconSpaceReserved="false" />

    <SwitchPreferenceCompat
        android:defaultValue="false"
        android:key="setting_color_background_set"
        android:layout="@layout/preference_switch"
        android:summary="@string/setting_color_background_set_summary"
        android:title="@string/setting_color_background_set"
        android:widgetLayout="@layout/preference_switch_widget"
        app:iconSpaceReserved="false" />

</PreferenceScreen>